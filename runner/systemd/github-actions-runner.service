[Unit]
Description=Self-hosted GitHub Actions Runner
Documentation=https://docs.github.com/en/actions/concepts/runners/about-self-hosted-runners
After=network-online.target

[Service]
Type=simple
WorkingDirectory=%h/actions-runner
ExecStart=%h/actions-runner/run.sh
Restart=always
RestartSec=10
KillSignal=SIGINT
TimeoutStopSec=30

[Install]
WantedBy=default.target
